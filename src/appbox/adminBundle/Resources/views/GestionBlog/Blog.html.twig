{% extends "::Baseadmin.html.twig" %}
{% block css %}
    <!-- toast CSS -->
    <link href="{{ asset('bundles/appboxadminBundle/plugins/bower_components/datatables/jquery.dataTables.min.css')}}" rel="stylesheet" type="text/css" />
    <!-- Footable CSS -->
    <link href="{{ asset('bundles/appboxadminBundle/plugins/bower_components/footable/css/footable.core.css')}}" rel="stylesheet">
    <link href="{{  asset('bundles/appboxadminBundle/plugins/bower_components/bootstrap-select/bootstrap-select.min.css')}}" rel="stylesheet" />
    {% endblock %}
{% block contenaire%}
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Liste des blogs</h4> </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('adminpath') }}">Index</a></li>
                <li class="active">Liste des blogs</li>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <!-- /row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Liste des articles</h3>
                <table id="demo-foo-row-toggler" class="table toggle-circle table-hover">
                    <thead>
                    <tr>
                        <th data-toggle="true"> Titre </th>
                        <th> Date de publication </th>
                        <th data-hide="phone"> Image </th>
                        <th data-hide="phone"> Action </th>
                        <th data-hide="all"> Article </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for blog in blog %}
                        <tr>
                            <td>{{ blog.titre }}</td>
                            <td>{{ blog.datederecrutement|date('d/m/Y') }}</td>
                            <td><img src="{{ asset('bundles/appboxvoyageBundle/image/'~blog.url) }}" alt="iMac" width="150"> </td>
                            <td><a href="{{ path('modifierblogpath',{'id':blog.id}) }}" class="text-inverse p-r-10" data-toggle="tooltip" title="Modifier"><i class="ti-marker-alt"></i></a> <a href="{{ path('suppblogpath',{'id':blog.id}) }}" class="text-inverse" title="Supprimer" data-toggle="tooltip"><i class="ti-trash"></i></a></td>
                            <td>{{ blog.description }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
{% block javascriptepersonnaliser %}
    <!-- Footable -->
    <script src="{{ asset('bundles/appboxadminBundle/plugins/bower_components/footable/js/footable.all.min.js')}}"></script>
    <script src="{{ asset('bundles/appboxadminBundle/plugins/bower_components/bootstrap-select/bootstrap-select.min.js')}}" type="text/javascript"></script>
    <!--FooTable init-->
    <script src="{{ asset('bundles/appboxadminBundle/js/footable-init.js')}}"></script>
{% endblock %}