{% extends "::Baseadmin.html.twig" %}
{% block css %}
    <!-- wysihtml5 CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/appboxadminBundle/plugins/bower_components/html5-editor/bootstrap-wysihtml5.css')}}" />
{% endblock %}
{% block contenaire %}
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Detail Inbox</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('adminpath') }}">Dashboard</a></li>
                <li class="active">detailInbox</li>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-2 col-md-3  col-sm-4 col-xs-12 inbox-panel">
            <div> <a href="#" class="btn btn-custom btn-block waves-effect waves-light">Compose</a>
                <div class="list-group mail-list m-t-20">
                    <a href="{{ path('inboxpath') }}" class="list-group-item active">Inbox<span class="label label-rouded label-success pull-right">{{ z }}</span></a>
                </div>
            </div>
        </div>
        <div class="col-lg-10 col-md-9 col-sm-8 col-xs-12 mail_listing">
                                    <div class="media m-b-30 p-t-20">
                                        <h4 class="font-bold m-t-0">{{ mail.objet }}</h4>
                                        <hr>
                                        <div class="media-body"> <span class="media-meta pull-right">{{ mail.date|date("d/m/Y g:ia") }}</span>
                                            <h4 class="text-danger m-0">{{ mail.nom }}</h4>
                                            <small class="text-muted">From: {{ mail.email }}</small> </div>
                                    </div>
                                    <p>{{ mail.text }}</p>
                                    <hr>

                                        <form method="POST">

                                            <div class="form-group">
                                                <textarea name="email" class="textarea_editor form-control" rows="15" placeholder="Cliquer pour repondre"></textarea>
                                            </div>
                                            <h4><i class="ti-link"></i> Attachment</h4>
                                            <hr>
                                            <button name="text" type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Envoyer</button>

                                        </form>
                                </div>
    </div>


{% endblock %}
{% block javascriptepersonnaliser %}
    <script src="{{ asset('bundles/appboxadminBundle/plugins/bower_components/html5-editor/wysihtml5-0.3.0.js')}}"></script>
    <script src="{{ asset('bundles/appboxadminBundle/plugins/bower_components/html5-editor/bootstrap-wysihtml5.js')}}"></script>
    <script>
        $(document).ready(function() {

            $('.textarea_editor').wysihtml5();

        });
    </script>
{% endblock %}