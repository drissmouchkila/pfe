{% extends "::Baseadmin.html.twig" %}
{% block css %}
    <!-- wysihtml5 CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/appboxadminBundle/plugins/bower_components/html5-editor/bootstrap-wysihtml5.css')}}" />
    {% endblock %}
{% block contenaire %}

                        <div class="white-box">

    <div class=" mail_listing">
        <h3 class="box-title">Composer nouveau message</h3>
        <form method="POST">
        <div class="form-group">
            <input name="email" class="form-control" placeholder="A:" {% if client is not null %}value="{{ client.email }}"{% endif %}>
        </div>
        <div class="form-group">
            <input name="objet" class="form-control" placeholder="Objet:">
        </div>
        <div class="form-group">
            <textarea name="text" class="textarea_editor form-control" rows="15" placeholder="Entre texte ..."></textarea>
        </div>
        <h4><i class="ti-link"></i> Attachment</h4>
        <hr>
        <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Envoyer</button>

            </form>
    </div>
    </div>

{% endblock %}
{% block javascriptepersonnaliser %}
    <script src="{{ asset('bundles/appboxadminBundle/plugins/bower_components/html5-editor/wysihtml5-0.3.0.js')}}"></script>
    <script src="{{ asset('bundles/appboxadminBundle/plugins/bower_components/html5-editor/bootstrap-wysihtml5.js')}}"></script>
    <script>
        $(document).ready(function() {

            $('.textarea_editor').wysihtml5();

        });
    </script>
{% endblock %}