{% extends "::Baseadmin.html.twig" %}
{% block contenaire %}
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">création de réservation</h4> </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('adminpath') }}">Index</a></li>
                <li class="active">création reservation</li>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="white-box">
        <h3 class="box-title m-b-0">Ajouter Réservation</h3>
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                {{ form_start(form) }}
                    <div class="form-group">
                        <label for="exampleInputuname">Nom</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="ti-user"></i></div>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control','placeholder':'Nom'}}) }}
                        </div>
                    </div>
                <div class="form-group">
                    <label for="exampleInputuname">Prenom</label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="ti-user"></i></div>
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control','placeholder':'Prenom'}}) }}
                    </div>
                </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="ti-email"></i></div>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder':'Email'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputpwd1">Address</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="ti-home"></i></div>
                            {{ form_widget(form.address, {'attr': {'class': 'form-control','placeholder':'Address'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputpwd2">Telephone</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="ti-mobile"></i></div>
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control','placeholder':'Telephone'}}) }}
                        </div>
                    </div>
                <div class="form-group">
                    <label for="exampleInputpwd2">Voyage</label>
                    <div class="input-group">
                        <div class="input-group-addon"><i class="ti-car"></i></div>
                        <select  name="voyage" class="form-control" data-placeholder="Choose a Category" tabindex="1">
                            {% for vo in vo %}
                                <option value="{{ vo.id }}">{{ vo.titre }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-succes waves-effect waves-light m-r-10'},'label':'Valider'}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
